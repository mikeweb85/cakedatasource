{
    "name": "mikeweb85/cakedatasources",
    "description": "Datasources plugin for CakePHP",
    "type": "cakephp-plugin",
	"keywords" : [
		"dsn",
		"redis",
		"predis",
		"odbc",
		"sqlserver",
		"amqp",
		"ldap"
	],
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
    	"ext-odbc": "*",
        "ext-ldap": "*",
        "predis/predis": "^1.1",
        "cakephp/cakephp": "^3.7|^3.8",
        "giggsey/libphonenumber-for-php": "^8.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7.14|^6.0",
        "cakephp/elastic-search": "^2.0",
        "php-amqplib/php-amqplib": "^2.8",
        "malkusch/lock": "^2.1",
        "react/event-loop": "^1.1"
    },
    "suggest": {
    	"ext-phpiredis": "*"
    },
    "autoload": {
        "psr-4": {
            "MikeWeb\\CakeSources\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MikeWeb\\CakeSources\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    }
}
