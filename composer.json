{
    "name": "mikeweb85/cakedatasources",
    "description": "Datasources plugin for CakePHP",
    "type": "cakephp-plugin",
	"keywords" : [
		"dsn",
		"redis",
		"predis",
		"odbc",
		"sqlserver",
		"amqp",
		"ldap"
	],
    "license": "MIT",
    "require": {
      "php": ">=7.2",
      "ext-dom": "*",
      "ext-simplexml": "*",
      "ext-json": "*",
      "ext-odbc": "*",
      "ext-soap": "*",
      "cakephp/cakephp": "^3.7|^3.8",
      "cakephp/elastic-search": "^2.0",
      "predis/predis": "^1.1",
      "giggsey/libphonenumber-for-php": "^8.11",
      "react/event-loop": "^1.1",
      "malkusch/lock": "^2.1",
      "sendgrid/sendgrid": "^7.5"
    },
    "require-dev": {
      "phpunit/phpunit": "^5.7.14|^6.0"
    },
    "suggest": {
      "ext-phpiredis": "*"
    },
    "autoload": {
      "psr-4": {
        "MikeWeb\\CakeSources\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "MikeWeb\\CakeSources\\Test\\": "tests/",
        "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
      }
    }
}
